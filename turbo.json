{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"],
			"env": [
				"DATABASE_URL",
				"NEXT_PUBLIC_BASE_URL",
				"CORS_ORIGIN",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"GOOGLE_CLIENT_SECRET",
				"GOOGLE_CLIENT_ID",
				"POLAR_ACCESS_TOKEN",
				"POLAR_SUCCESS_URL",
				"POLAR_WEBHOOK_SECRET",
				"QSTASH_URL",
				"QSTASH_TOKEN",
				"QSTASH_CURRENT_SIGNING_KEY",
				"QSTASH_NEXT_SIGNING_KEY"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false,
			"persistent": true
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false,
			"persistent": true
		}
	}
}
